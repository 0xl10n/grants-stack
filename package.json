{
  "name": "starter-node-basic",
  "private": true,
  "version": "1.0.0",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start:dev": "NODE_ENV=development nodemon -e ts -x node -r dotenv-flow/config --loader ts-node/esm/transpile-only src/index.ts",
    "lint": "eslint --cache --max-warnings=0 src",
    "test": "jest",
    "test:watch": "jest --watch --notify",
    "prepare": "husky install",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.5.1",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^6.0.0",
    "jest": "^28.1.0",
    "lint-staged": ">=10",
    "node-notifier": "^10.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.0.5",
    "ts-jest": "^28.0.3",
    "typescript": "^4.7.2"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "dotenv-flow": "^3.2.0",
    "ts-node": "^10.8.0"
  }
}
