{
  "name": "node-projects",
  "private": true,
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon -e ts -w src --exec ts-node --transpile-only src/index.ts"
  },
  "devDependencies": {
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "husky": ">=4",
    "jest": "^26.1.0",
    "lint-staged": ">=10",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=14"
  }
}
